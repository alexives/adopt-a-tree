%div.ask_for_token
  %h2
    = t("titles.token") 
  = form_for :promo_code, :url => promo_codes_path, :method => :put, :html => {:id => "promo_code_form"} do |f|
    = f.hidden_field "user_id", :value => current_user.id
    %div{:id => "token_container"}
      %fieldset.control-group{:id => 'token_possession_container'}
        = f.label t("labels.token_possession"), :id => "token_possession_label", :for => 'token_possession_buttons'
        %fieldset.control-group{:id => 'token_possession_buttons'}
          %button.btn{:id => "token_code_no"}
            = t("buttons.neg")
          %button.btn{:id => "token_code_yes"}
            = t("buttons.pos")
      %fieldset.control-group{:id => 'token_input_container'}
        = f.label t("labels.token_intake"), :id => "token_code_label", :for => "token_code"
        = f.text_field "token_code"
        = f.submit t("buttons.use_token"), :class => "btn primary", :id => "token_submit"
